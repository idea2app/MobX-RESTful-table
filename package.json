{
  "name": "mobx-restful-table",
  "version": "2.2.0",
  "license": "LGPL-3.0",
  "author": "shiy2008@gmail.com",
  "description": "A Pagination Table & Scroll List component suite for CRUD operation, which is based on MobX RESTful & React.",
  "keywords": [
    "table",
    "form",
    "component",
    "crud",
    "mobx",
    "restful",
    "react"
  ],
  "homepage": "https://idea2app.github.io/MobX-RESTful-table/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idea2app/MobX-RESTful-table.git"
  },
  "bugs": {
    "url": "https://github.com/idea2app/MobX-RESTful-table/issues"
  },
  "source": "source/index.ts",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "dependencies": {
    "@swc/helpers": "^0.5.17",
    "classnames": "^2.5.1",
    "lodash": "^4.17.21",
    "mobx": "^6.13.7",
    "mobx-i18n": "^0.6.0",
    "mobx-react": "^9.2.0",
    "mobx-react-helper": "^0.3.4",
    "mobx-restful": "^2.1.0",
    "react-bootstrap": "^2.10.9",
    "regenerator-runtime": "^0.14.1",
    "web-utility": "^4.4.3"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@octokit/openapi-types": "^25.0.0",
    "@parcel/config-default": "~2.14.4",
    "@parcel/packager-ts": "~2.14.4",
    "@parcel/transformer-typescript-tsc": "~2.14.4",
    "@parcel/transformer-typescript-types": "~2.14.4",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.15.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "husky": "^9.1.7",
    "idea-react": "^2.0.0-rc.10",
    "koajax": "^3.1.2",
    "lint-staged": "^15.5.1",
    "mobx-github": "^0.3.5",
    "parcel": "~2.14.4",
    "prettier": "^3.5.3",
    "prismjs": "^1.30.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "typedoc": "^0.28.3",
    "typedoc-plugin-mdn-links": "^5.0.1",
    "typescript": "~5.8.3"
  },
  "resolutions": {
    "@octokit/openapi-types": "$@octokit/openapi-types"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@swc/core",
      "lmdb",
      "msgpackr-extract"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "tabWidth": 2
  },
  "lint-staged": {
    "*.{md,json,yml,ts}": "prettier --write"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead, IE 11",
  "targets": {
    "main": {
      "optimize": true
    }
  },
  "scripts": {
    "prepare": "husky",
    "preview": "cd preview/  &&  rimraf ../.parcel-cache dist/  &&  parcel --open",
    "test": "lint-staged",
    "pack-preview": "cd preview/  &&  rimraf ../.parcel-cache dist/  &&  parcel build --public-url=. --dist-dir=../docs/preview/",
    "build": "rm -rf dist/ docs/  &&  parcel build  &&  typedoc source/  &&  npm run pack-preview",
    "prepublishOnly": "npm test  &&  npm run build"
  }
}
